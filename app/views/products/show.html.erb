
<%= render "layouts/reg" %>



<%= render "layouts/head" %>

<%= render "layouts/menu" %>

<!-- Modal -->
<div id="Zoom" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true" style="width:750px;height:500px">
  <div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top:-1%">×</button>
  </div>
  <div class="modal-body" style="width:700px;height:500px;margin-top:1%">
    <%= image_tag @product.avatar.url, :style=>"text-align:right", :style=> "width:650px;height:650px"%>
  </div>
</div>


    <div class="span8" style="margin-right:13%;margin-left:5%">
    <h3>Каталог</h3>
    <hr>
    <h4 style="margin-left:2%">Смесители: <%= @product.brand.title %></h4>
    <hr>
    <ul class="thumbnails">
      <li class="span4">
        <%= image_tag @product.avatar.url, :style=>"text-align:right"%>
      </li>
      <div class="span3">
        <h2><strong><%= @product.title %></strong></h2>
        <p>Категория: <strong><%= @product.category.title %></strong></p>
        <p>Артикул: <strong><%= @product.article %></strong></p>
        <p>Коллекция: <strong><%= @product.collection %></strong></p>
        <h3><%= @product.price %> p.</h3>
        <%= if session[:user_id] == nil
          render "reg_pls"
        else
          render "buy"
        end %>
      </div>
      <div class="span5" style="margin-top:5%;margin-left:2%">
        <h4>Описание</h4>
        <p><%= @product.description %></p>
      </div>
    </ul>
<hr>
  </div>
