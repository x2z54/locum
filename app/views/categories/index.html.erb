<%= javascript_include_tag "application" %>
<%= render "layouts/panel" %>

<div class="span13" style="margin-left:3%;width:80%"  >
  <div class="alert alert-info">
    <h1>Категории</h1>
  </div>
<hr>
<table class = "table table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.title %></td>
    <td><%= link_to 'Редактировать', edit_category_path(category), :class => "btn btn-primary" %></td>
    <td><%= button_to 'Удалить', category, method: :delete, data: { confirm: 'Вы уверены?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить категорию', new_category_path %>
</div>
